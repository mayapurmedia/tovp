{% import 'database/_macros.jinja' as macros %}
<!doctype html>
<html>
<head>
  <title>{% if page_title %}{{ page_title|e }}{% else %}{{ content_title|e }}{% endif %}</title>
  <meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=no">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <link href="{{ static("database/css/style.css") }}" rel="stylesheet">
  {% include 'shared/_icons.jinja' %}
  {% block javascript_head %}{% endblock %}
</head>
<body unresolved touch-action="auto">
{% include 'database/_google_analytics.jinja' %}
{% include 'database/_navigation.jinja' %}
    <div class="container main-content">

        {% if messages %}
        <div class="row">
            <div class="col-xs-12">
                {% for message in messages %}
                <div class="alert alert-dismissable{{ ' alert-' + message.tags if message.tags }}">
                    <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    {{ message }} 
                </div>
                {% endfor %}
                <script>$(".alert").alert();</script>
            </div>
        </div>
        {% endif %}

        {% block base_content %}
        {% endblock %}
    </div>
{% include 'database/footer.jinja' %}

{# Headroom.js for top menu #}
<script type="text/javascript"  src="//cdnjs.cloudflare.com/ajax/libs/headroom/0.7.0/headroom.min.js"></script>
<script>
(function() {
    var header = document.querySelector("#header");
    if(window.location.hash) {
      header.classList.add("slide--up");
    }

    new Headroom(header, {
        tolerance: {
          down : 5,
          up : 5
        },
        offset : 50,
        classes: {
          initial: "slide",
          pinned: "slide--reset",
          unpinned: "slide--up"
        }
    }).init();

}());
</script>

</body>
</html>

