{% import '_macros.jinja' as macros %}
{% extends 'content-area.jinja' %}
{% set page_title = object.display_name + "'s profile" %}
{% set meta_description = object.about|makeplain %}
{% set body_class = "authors" %}

{% block page_content %}
<h1>{{ object.display_name }}</h1>
    {% if user == object %}
        <a class="title-link" href="{{ url('users:update') }}">(edit)</a>
    {% endif %}

    {% if object.about %}
            {{ object.about }}
    {% endif %}
{% endblock %}
