{% extends 'content-area.jinja' %}
{% block title %}Profiles{% endblock %}

{% block page_content %}
    {# Paginate objects list and set result as paginated_list #}
    {% set paginated_list = paginate_list(request, object_list, 10) %}
    {# Print pager for pagination #}
    {# Go through objects and print them #}
    {% if paginated_list %}
        <div class="row">
        {% for obj in paginated_list %}
            <div class="col-xs-12">
                <a href="{{ obj.get_absolute_url() }}">{{ obj.display_name }}</a>
            </div>
        {% endfor %}
        </div>
        {{ pager(request, paginated_list) }}
    {% else %}
        There are no profiles.
    {% endif %}
{% endblock %}
