        <p>
{% if object.overwrite_name %}
    {{ object.overwrite_name }}
{% elif object.pledge.person.name %}
    {{ object.pledge.person.name }}
{% else %}
    {{ object.pledge.person.initiated_name }}
{% endif %}
        </p>

        <p>
        {% if object.overwrite_address %}
            {{ object.overwrite_address }}
